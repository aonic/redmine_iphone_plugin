<div id="timelog-details" class="current">
    <div class="toolbar">
        <h1>Time log Details | <%=h @project.name %></h1>
        <%= link_to( "Back", iphone_project_path(@project), :class => "back") %>
    </div>

    <ul class="edgetoedge">
        <% @entries.each do |entry| %>
        <li>
            <% if entry.issue %>
            <p><%= link_to "##{entry.issue.id}", iphone_project_issue_path(@project, entry.issue)%></p>
            <% end %>
            <p><%=h entry.activity %>, <%= html_hours("%.1f" % entry.hours) %> Hours</p>
            <span class="user"><%=h entry.user %></span>
            <span class="comment"><%=h entry.comments %></span>
        </li>
        <% end %>
    </ul>
</div>
